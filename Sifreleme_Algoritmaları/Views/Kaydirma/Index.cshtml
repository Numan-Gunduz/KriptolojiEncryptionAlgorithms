@{
    ViewData["Title"] = "Kaydırmalı Şifreleme";
}

<h1>Kaydırmalı Şifreleme</h1>

<form asp-controller="Kaydirma" asp-action="Sifrele" method="post">
    <div class="form-group">
        <label for="girisMetni">Metin:</label>
        <textarea class="form-control" id="girisMetni" name="girisMetni" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label for="kaydirmaMiktari">Kaydırma Miktarı:</label>
        <input type="number" class="form-control" id="kaydirmaMiktari" name="kaydirmaMiktari" min="0" max="28" required>
    </div>
    <button type="submit" class="btn btn-primary">Şifrele</button>
</form>
<form asp-controller="Kaydirma" asp-action="Coz" method="post">
    <div class="form-group">
        <label for="sifrelenmisMetin">Şifrelenmiş Metin:</label>
        <textarea class="form-control" id="sifrelenmisMetin" name="sifrelenmisMetin" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label for="kaydirmaMiktari">Kaydırma Miktarı:</label>
        <input type="number" class="form-control" id="kaydirmaMiktari" name="kaydirmaMiktari" min="0" max="28" required>
    </div>
    <button type="submit" class="btn btn-primary">Çöz</button>
</form>

@if (ViewData["HataMesaji"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @ViewData["HataMesaji"]
    </div>
}

@if (ViewData["CozulmusMetin"] != null)
{
    <div class="mt-3">
        <h2>Çözülmüş Metin:</h2>
        <p>@ViewData["CozulmusMetin"]</p>
    </div>
}

@if (ViewData["HataMesaji"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @ViewData["HataMesaji"]
    </div>
}

@if (ViewData["SifrelenmisMetin"] != null)
{
    <div class="mt-3">
        <h2>Şifrelenmiş Metin:</h2>
        <p>@ViewData["SifrelenmisMetin"]</p>
    </div>
}
